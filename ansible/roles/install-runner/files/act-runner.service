[Unit]
Description=Gitea Actions runner
Documentation=https://gitea.com/gitea/act_runner
After=gitea.service # Include if jobs run in Docker containers

[Service]
ExecStart= act-runner daemon 
ExecReload=/bin/kill -s HUP $MAINPID
WorkingDirectory=/home/lab-user/runner
TimeoutSec=0
RestartSec=10
Restart=always
User=lab-user

[Install]
WantedBy=multi-user.target
